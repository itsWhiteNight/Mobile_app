<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/quiz_background2"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="292dp"
        android:layout_height="77dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/emsi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/LoginText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/syncopate_bold"
        android:text="Login"
        android:textAlignment="center"
        android:textColor="#9C27B0"
        android:textSize="60sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:fontFamily="@font/syncopate_bold"
        android:textSize="25sp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="25dp"
        android:text="Email"
        android:textColor="#9C27B0"
        tools:ignore="HardcodedText">

    </TextView>

    <EditText
        android:id="@+id/EmailLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/syncopate_bold"
        android:layout_marginRight="25dp"
        android:background="@drawable/button_custom"
        android:hint="Enter your email"
        android:inputType="textEmailAddress"
        android:padding="16dp"
        android:textColor="@color/white"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:fontFamily="@font/syncopate_bold"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="25dp"
        android:textSize="25sp"
        android:text="Password"

        android:textColor="#9C27B0"
        tools:ignore="HardcodedText">

    </TextView>

    <EditText

        android:id="@+id/PasswordLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="25dp"
        android:fontFamily="@font/syncopate"
        android:background="@drawable/button_custom"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:padding="16dp"
        android:textColor="@color/white"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/LoginMain"
        android:layout_width="300dp"
        android:layout_height="86dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_custom"
        android:minWidth="355dp"
        android:minHeight="48dp"
        android:padding="16dp"
        android:text="Login"
        android:fontFamily="@font/syncopate_bold"
        android:textColor="#9C27B0"
        android:textSize="25sp"
        app:backgroundTint="@null"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/RegisterMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="Register First !"
        android:fontFamily="@font/syncopate"
        android:textColor="#9C27B0"
        android:textSize="20sp"
        >

    </TextView>


</LinearLayout>